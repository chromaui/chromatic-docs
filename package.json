{
  "name": "chromatic-docs",
  "version": "0.0.0",
  "description": "The Chromatic documentation site.",
  "license": "ISC",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/chromaui/chromatic.git",
    "directory": "docs"
  },
  "main": "gruntfile.js",
  "devDependencies": {
    "grunt": "^1.0.1",
    "grunt-contrib-less": "^2.0.0",
    "grunt-contrib-watch": "^1.0.0"
  },
  "scripts": {
    "start": "jekyll server -l",
    "build": "jekyll build",
    "build-deploy": "yarn build; rm -rf _site_deploy/docs; mv _site _site_deploy/docs",
    "test": "jest --watch --env=jsdom",
    "grunt": "grunt"
  },
  "eslintConfig": {
    "extends": "./config/eslint.js"
  },
  "jest": {
    "moduleFileExtensions": [
      "jsx",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "^[./a-zA-Z0-9$_-]+\\.(jpg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm)$": "<rootDir>/config/jest/FileStub.js",
      "^[./a-zA-Z0-9$_-]+\\.css$": "<rootDir>/config/jest/CSSStub.js"
    },
    "scriptPreprocessor": "<rootDir>/config/jest/transform.js",
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/(build|docs|node_modules)/"
    ],
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(js|jsx)$"
  }
}