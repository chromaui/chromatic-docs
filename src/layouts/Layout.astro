--- 
import { Container } from '@chromaui/tetra';
import { MarketingFooter } from '../components/Footer/MarketingFooter';
import { MarketingHeader } from '../components/Header/MarketingHeader';
import { Wrapper } from '../components/Wrapper';
import '@fontsource-variable/nunito-sans';
import { Sidebar } from '../components/Sidebar';
import { getCollection } from 'astro:content';

interface Props {
	content: {
		title?: string;
		description?: string;
	};
}

const { content: { title } } = Astro.props;
const { pathname } = Astro.url;
const getStarted = await getCollection("getStarted");
const configuration = await getCollection("configuration");
const sidebar = [
	{
		title: "Get Started",
		items: getStarted,
		defaultOpen: true,
    timeline: true
	},
	{
		title: "Configuration",
		items: configuration,
	}
]

console.log(getStarted.length)

---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link href="prism.css" rel="stylesheet" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<style is:global>
			:root {
				--accent: 136, 58, 234;
				--accent-light: 224, 204, 250;
				--accent-dark: 49, 10, 101;
				--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), rgb(var(--accent-light)) 30%, white 60%);
			}
		
			* {
				box-sizing: border-box;
				-webkit-tap-highlight-color: rgba(0, 0, 0, 0);
				-webkit-tap-highlight-color: transparent; /* For some Androids */
			}
		
			html {
				outline: none;
				-webkit-font-smoothing: antialiased;
				-moz-osx-font-smoothing: grayscale;
			}
		
			html, body {
				font-family: 'Nunito Sans Variable', sans-serif;
				background: #fff;
				margin: 0;
				padding: 0;
				-webkit-font-smoothing: antialiased;
				-moz-osx-font-smoothing: grayscale;
			}

			.content-wrapper {
				display: flex;
				gap: 2.5rem;
  			margin: 64px 0;
			}
		</style>
	</head>
	<body>
		<MarketingHeader client:load />
		<Container client:load>
			<div class="content-wrapper">
				<Sidebar client:load url={pathname.replace(/^\/|\/$/g, '')} sidebar={sidebar} />
				<Wrapper client:load>
					<slot />
				</Wrapper>
			</div>
		</Container>
		<MarketingFooter client:load />
	</body>
</html>
