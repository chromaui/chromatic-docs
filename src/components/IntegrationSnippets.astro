---
import { TabItem, Tabs } from "./Tabs";

interface Props {
  storybook: string;
  playwright: string;
  cypress: string;
}
---

<Tabs>
  {
    Astro.slots.has("storybook") && (
      <TabItem label="Storybook">
        <slot name="storybook" />
      </TabItem>
    )
  }
  {
    Astro.slots.has("playwright") && (
      <TabItem label="Playwright">
        <slot name="playwright" />
      </TabItem>
    )
  }
  {
    Astro.slots.has("cypress") && (
      <TabItem label="Cypress">
        <slot name="cypress" />
      </TabItem>
    )
  }
</Tabs>
